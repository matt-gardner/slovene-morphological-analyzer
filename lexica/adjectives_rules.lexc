! My grammar book says that only nominative singular adjectives specify for
! definiteness, but the JOS MSDs say that accusative singular adjectives do
! too, so we'll go with theirs, as they are natives.

LEXICON AdjInfI

! It seems to me that this should be unspecified for definiteness, but the JOS
! MSDs give it as +Definite, so that's what I'm doing.
+A+General+Positive+Masc+Sing+Nom+Definite:^ #;
+A+General+Positive+Masc+Sing+Acc+Definite:^ #;
+A+General+Positive:+AdjRemoveI AdjInfBase;

LEXICON AdjInf

! The +A on the right means to check for fleeting e
+A+General+Positive:+A AdjNormalDefiniteness;
+A+General+Comparative:+Aej≈° AdjNormalDefiniteness;

LEXICON AdjInfPoss

! No +A on the right here, as these don't have fleeting e's
+A+Possessive+Positive: AdjNormalDefiniteness;

LEXICON AdjInfPart

+A+Participle+Positive: AdjNormalDefiniteness;

LEXICON AdjNormalDefiniteness

+Masc+Sing+Nom+Indefinite:^ #;
+Masc+Sing+Nom+Definite:^i #;
+Masc+Sing+Acc+Indefinite:^ #;
+Masc+Sing+Acc+Definite:^i #;
AdjInfBase;

LEXICON AdjInfBase

!+Masc+Sing+Nom+Indefinite:^ #; ! handled in subclasses
!+Masc+Sing+Nom+Definite:^i #; ! handled in subclasses
+Masc+Sing+Gen:^ega #;
+Masc+Sing+Dat:^emu #;
!+Masc+Sing+Acc+Indefinite:^ #; ! handled in subclasses
!+Masc+Sing+Acc+Definite:^i #; ! handled in subclasses
+Masc+Sing+Acc:^ega #;
+Masc+Sing+Loc:^em #;
+Masc+Sing+Ins:^im #;
+Masc+Dual+Nom:^a #;
+Masc+Dual+Gen:^ih #;
+Masc+Dual+Dat:^ima #;
+Masc+Dual+Acc:^a #;
+Masc+Dual+Loc:^ih #;
+Masc+Dual+Ins:^ima #;
+Masc+Plural+Nom:^i #;
+Masc+Plural+Gen:^ih #;
+Masc+Plural+Dat:^im #;
+Masc+Plural+Acc:^e #;
+Masc+Plural+Loc:^ih #;
+Masc+Plural+Ins:^imi #;

+Fem+Sing+Nom:^a #;
+Fem+Sing+Gen:^e #;
+Fem+Sing+Dat:^i #;
+Fem+Sing+Acc:^o #;
+Fem+Sing+Loc:^i #;
+Fem+Sing+Ins:^o #;
+Fem+Dual+Nom:^i #;
+Fem+Dual+Gen:^ih #;
+Fem+Dual+Dat:^ima #;
+Fem+Dual+Acc:^i #;
+Fem+Dual+Loc:^ih #;
+Fem+Dual+Ins:^ima #;
+Fem+Plural+Nom:^e #;
+Fem+Plural+Gen:^ih #;
+Fem+Plural+Dat:^im #;
+Fem+Plural+Acc:^e #;
+Fem+Plural+Loc:^ih #;
+Fem+Plural+Ins:^imi #;

! The +Masc here in the singular nominative and accusative is to take advantage
! of rules already written to convert an o to an e in certain circumstances.
+Neut+Sing+Nom:+Masc^o #;
+Neut+Sing+Gen:^ega #;
+Neut+Sing+Dat:^emu #;
+Neut+Sing+Acc:+Masc^o #;
+Neut+Sing+Loc:^em #;
+Neut+Sing+Ins:^im #;
+Neut+Dual+Nom:^i #;
